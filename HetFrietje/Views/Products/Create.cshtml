@model Tuple<Product, List<Category>, List<Option>>

@{
    ViewData["Title"] = "Artikel Aanmaken";

    var messageType = TempData["MessageType"] as string;
    var message = TempData["Message"] as string;
    var productId = TempData["ProductId"] as int?;
}

<div class="text-center fw-bold">
    <h3>Artikel aanpassen</h3>
</div>

<div class="alert alert-warning">
    Het aanpassen van Keuze opties, Categorieën en de productfoto werkt momenteel nog niet.
</div>

<div class="border-1 rounded border p-4 d-flex">
    <form asp-action="Create" class="d-flex">
        <!-- Linker kolom -->
        <div class="col-md-6">
            <img src="~/img/products/default.png" onchange="previewProductPhoto(this)" class="img-fluid mb-2" id="productPhoto" />

            <div class="row mb-1">
                <label for="productPhotoUpload" class="col-form-label col-md-4">Afbeelding</label>
                <div class="col-md-8">
                    <input class="form-control" type="file" accept="image/png" id="productPhotoUpload" />
                </div>
            </div>

            <div class="row mb-1">
                <label asp-for="@Model.Item1.Stock" class="col-form-label col-md-4">Voorraad</label>
                <div class="col-md-8">
                    <input asp-for="@Model.Item1.Stock" class="form-control form-control-sm" type="number" value="@Model.Item1.Stock" />
                </div>
            </div>

            <div class="row mb-1">
                <label asp-for="@Model.Item1.Categories" class="col-form-label col-md-4">Categorieën</label>
                <div class="col-md-8">
                    <select asp-for="@Model.Item1.Categories" class="form-select" id="productCategories" multiple>
                        @if (Model.Item2.Count == 0)
                        {
                            <option value="null">Geen categorieën aangemaakt</option>
                        }
                        else
                        {
                            foreach (var category in Model.Item2)
                            {
                                <option value="@category.CategoryId">@category.Name</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-1">
                <label asp-for="@Model.Item1.Options" class="col-form-label col-md-4">Keuze opties</label>
                <div class="col-md-8">
                    <select asp-for="@Model.Item1.Options" class="form-select" id="productOptions" multiple>
                        @if (Model.Item3.Count == 0)
                        {
                            <option value="null">Geen opties aangemaakt</option>
                        }
                        else
                        {
                            foreach (var option in Model.Item3)
                            {
                                <option value="@option">@option.Name</option>
                            }
                            <option value="null">Geen</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-1">
                <label asp-for="@Model.Item1.Price" class="col-form-label col-md-4">Prijs</label>
                <div class="col-md-8">
                    <input asp-for="@Model.Item1.Price" class="form-control form-control-sm" type="number" step="0.01" id="productPrice" value="@Model.Item1.Price" />
                </div>
            </div>

            <div class="row mb-1">
                <label asp-for="@Model.Item1.SalesPrice" class="col-form-label col-md-4">Kortingsprijs</label>
                <div class="col-md-8">
                    <input asp-for="@Model.Item1.SalesPrice" class="form-control form-control-sm" type="number" step="0.01" id="productSalesPrice" value="@Model.Item1.SalesPrice" />
                </div>
            </div>

            <div class="row mb-1">
                <label asp-for="@Model.Item1.Tax" class="col-form-label col-md-4">BTW</label>
                <div class="col-md-8">
                    <input asp-for="@Model.Item1.Tax" class="form-control form-control-sm" type="number" step="0.01" id="productTax" value="@Model.Item1.Tax" />
                </div>
            </div>

            <div class="col-md-12 d-flex">
                <div class="col-md-6 d-flex justify-content-center">
                    <button class="btn btn-warning" type="submit">Opslaan</button>
                </div>
                <div class="col-md-6 d-flex justify-content-center">
                    <a class="btn btn-secondary" asp-area="" asp-controller="Products" asp-action="StockManagement">Annuleren</a>
                </div>
            </div>
        </div>

        <!-- Lege midden kolom -->
        <div class="col-md-3"></div>

        <!-- Rechter kolom -->
        <div class="col-md-11">
            <textarea asp-for="@Model.Item1.Name" class="form-control" rows="1" cols="4" placeholder="Product Naam"></textarea>
            <hr />

            <textarea asp-for="@Model.Item1.Description" class="form-control" id="productDescription" rows="4" cols="4" placeholder="Product beschrijving"></textarea>
            <hr />

            @if (Model.Item1.Options != null && Model.Item1.Options.Count != 0)
            {
                @foreach (var option in @Model.Item1.Options)
                {
                    <div class="productOptionContainer">
                        <label for="productOption@(option.OptionId)">@option.Name</label>
                        <select class="form-control" id="productOption@(option.OptionId)" disabled>
                            @foreach (var optionValue in option.Values)
                            {
                                <option>@optionValue</option>
                            }
                        </select>
                    </div>
                }

                <hr />
            }
        </div>
    </form>
</div>


@if (!String.IsNullOrEmpty(messageType) && !String.IsNullOrEmpty(message))
{
    @section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#messageModal').modal('show');
        });
    </script>
    }

    <div class="modal" tabindex="-1" id="messageModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    @switch (messageType)
                    {
                        case "error":
                            <h5 class="modal-title">ERROR</h5>
                            break;
                        case "confirmation":
                            <h5 class="modal-title">Artikel Verwijderen</h5>
                            break;
                        case "success":
                            <h5 class="modal-title">Gelukt</h5>
                            break;
                        default:
                            <h5 class="modal-title">Default Title</h5>
                            break;
                    }
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>@message</p>
                </div>
                <div class="modal-footer">
                    @if (messageType.Equals("confirmation") && productId != null)
                    {
                        <a class="btn btn-warning" asp-area="" asp-controller="Products" asp-action="DeleteProductConfirmed" asp-route-id="@productId">Bevestig</a>
                    }

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}